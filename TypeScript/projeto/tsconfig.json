{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true, // permitir importação de .json
    "outDir": "./build" // especificar o diretório que serão enviados os arquivos transpilados do typscript
  }
}